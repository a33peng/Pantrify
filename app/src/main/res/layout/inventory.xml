<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
<!--    android:background="@color/nude">-->

    <!-- beige box bg behind items-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/nudeBackgroundContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:background="@color/nude"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <TextView
            android:id="@+id/fridge_inv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="117dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="118dp"
            android:shadowColor="#000000"
            android:text="Fridge Inventory"
            android:textColor="#FF000000"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/imageView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/exitButton"
            android:layout_width="53dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="635dp"
            android:src="@drawable/exit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/fridge_inv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="119dp"
            android:layout_height="133dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="100dp"
            android:src="@drawable/rice"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/carrot_counter"
            app:layout_constraintVertical_bias="0.465" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="85dp"
            android:layout_height="80dp"
            android:layout_marginTop="28dp"
            android:src="@drawable/potato"
            app:layout_constraintEnd_toStartOf="@+id/imageView4"
            app:layout_constraintHorizontal_bias="0.354"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/lettuce_counter" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="85dp"
            android:layout_height="80dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="40dp"
            android:src="@drawable/carrot"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cucumber_counter" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="85dp"
            android:layout_height="80dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="28dp"
            android:src="@drawable/onion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tomato_counter" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="86dp"
            android:layout_height="76dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/egg"
            app:layout_constraintEnd_toStartOf="@+id/imageView6"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView5"
            app:layout_constraintTop_toBottomOf="@+id/potato_counter" />

        <!-- button -->

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="117dp"
            android:layout_height="108dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:rotation="270"
            android:src="@drawable/fish"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/onion_counter" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="85dp"
            android:layout_height="80dp"
            android:layout_marginTop="128dp"
            android:src="@drawable/lettuce"
            app:layout_constraintEnd_toStartOf="@+id/imageView2"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="85dp"
            android:layout_height="80dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="128dp"
            android:src="@drawable/tomato"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="85dp"
            android:layout_height="80dp"
            android:layout_marginTop="127dp"
            android:layout_marginEnd="36dp"
            android:src="@drawable/cucumber"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/tomato_counter"
            android:layout_width="85dp"
            android:layout_height="48dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="254dp"
            android:backgroundTint="@color/neptune"
            android:text="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <Button
            android:id="@+id/lettuce_counter"
            android:layout_width="85dp"
            android:layout_height="48dp"
            android:layout_marginStart="148dp"
            android:layout_marginEnd="146dp"
            android:backgroundTint="@color/neptune"
            android:src="@drawable/counter"
            android:text="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView7" />

        <Button
            android:id="@+id/cucumber_counter"
            android:layout_width="85dp"
            android:layout_height="48dp"
            android:layout_marginStart="254dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="433dp"
            android:backgroundTint="@color/neptune"
            android:src="@drawable/counter"
            android:text="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <Button
            android:id="@+id/onion_counter"
            android:layout_width="85dp"
            android:layout_height="48dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/neptune"
            android:src="@drawable/counter"
            android:text="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <Button
            android:id="@+id/potato_counter"
            android:layout_width="85dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="152dp"
            android:backgroundTint="@color/neptune"
            android:src="@drawable/counter"
            android:text="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView8" />

        <Button
            android:id="@+id/carrot_counter"
            android:layout_width="85dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="36dp"
            android:backgroundTint="@color/neptune"
            android:src="@drawable/counter"
            android:text="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

        <Button
            android:id="@+id/egg_counter"
            android:layout_width="85dp"
            android:layout_height="48dp"
            android:layout_marginStart="146dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="152dp"
            android:backgroundTint="@color/neptune"
            android:src="@drawable/counter"
            android:text="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView9" />

        <Button
            android:id="@+id/rice_counter"
            android:layout_width="85dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="40dp"
            android:backgroundTint="@color/neptune"
            android:src="@drawable/counter"
            android:text="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" />

        <Button
            android:id="@+id/fish_counter"
            android:layout_width="85dp"
            android:layout_height="48dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="257dp"
            android:layout_marginBottom="76dp"
            android:backgroundTint="@color/neptune"
            android:src="@drawable/counter"
            android:text="0"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView5"
            app:layout_constraintVertical_bias="0.187" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>